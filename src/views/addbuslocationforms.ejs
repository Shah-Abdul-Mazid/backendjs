<form action="/addbuslocationforms" method="POST" class="container mt-5">
  <h2>Add Location for Bus</h2>
  <div class="mb-3">
    <label for="bus_id" class="form-label">Bus ID</label>
    <input type="text" class="form-control" id="bus_id" name="bus_id" required />
  </div>
  <div class="mb-3">
    <label for="latitude" class="form-label">Latitude</label>
    <input type="number" step="any" class="form-control" id="latitude" name="latitude" required />
  </div>
  <div class="mb-3">
    <label for="longitude" form-label">Longitude</label>
    <input type="number" step="any" class="form-control" id="longitude" name="longitude" required />
  </div>
  <button type="submit" class="btn btn-success">Submit Location</button>
</form>