<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Live Bus Locations</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- DataTables CSS -->
  <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">

  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      padding: 20px;
    }
    h1 {
      text-align: center;
      color: #2c3e50;
      margin-bottom: 30px;
    }
    .container {
      max-width: 1100px;
      margin: auto;
    }
    .table-container {
      background: #ffffff;
      padding: 20px;
      border-radius: 6px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    th {
      background-color: #28a745;
      color: #fff;
      font-weight: 500;
    }
    .no-data {
      text-align: center;
      color: #888;
      font-style: italic;
      padding: 15px;
    }
    @media (max-width: 576px) {
      th, td {
        font-size: 0.85rem;
        padding: 6px;
      }
      h1 {
        font-size: 1.4rem;
      }
    }
  </style>
</head>
<body>
  <!-- Optional Navbar -->
  <%- include('partials/navbar') %>

  <div class="container">
    <h1>Live Bus Locations</h1>
    <div class="table-container">
      <table id="busTable" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Location ID</th>
            <th>Bus ID</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Recorded At</th>
          </tr>
        </thead>
        <tbody id="table-body">
          <tr><td colspan="5" class="no-data">Loading data...</td></tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

  <script>
    $(document).ready(function () {
      fetch('/data')
        .then(res => res.json())
        .then(data => {
          const tbody = $('#table-body');
          tbody.empty();

          if (data.items && data.items.length > 0) {
            data.items.forEach(item => {
              tbody.append(`
                <tr>
                  <td>${item.id || 'N/A'}</td>
                  <td>${item.bus_id || 'N/A'}</td>
                  <td>${item.latitude ? parseFloat(item.latitude).toFixed(6) : 'N/A'}</td>
                  <td>${item.longitude ? parseFloat(item.longitude).toFixed(6) : 'N/A'}</td>
                  <td>${item.recorded_at || 'N/A'}</td>
                </tr>
              `);
            });

            $('#busTable').DataTable({
              responsive: true,
              pageLength: 10,
              lengthMenu: [5, 10, 25, 50],
              order: [[4, 'desc']],
              language: {
                search: "Filter:",
                emptyTable: "No bus data available",
                info: "Showing _START_ to _END_ of _TOTAL_ entries",
                lengthMenu: "Show _MENU_"
              },
              columnDefs: [
                { type: 'num', targets: [1] },
                { type: 'num-fmt', targets: [2, 3] },
                { type: 'date', targets: 4 }
              ]
            });
          } else {
            tbody.append('<tr><td colspan="5" class="no-data">No bus data found</td></tr>');
          }
        })
        .catch(err => {
          console.error(err);
          $('#table-body').html('<tr><td colspan="5" class="no-data">Error loading data</td></tr>');
        });
    });
  </script>
</body>
</html>
