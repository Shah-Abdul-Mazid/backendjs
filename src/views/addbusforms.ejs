<form action="/addbusforms" method="POST" class="container mt-5">
  <h2>Add New Bus</h2>
  <div class="mb-3">
    <label for="bus_id" class="form-label">Bus ID</label>
    <input type="text" class="form-control" id="bus_id" name="bus_id" required />
  </div>
  <div class="mb-3">
    <label for="name" class="form-label">Bus Name</label>
    <input type="text" class="form-control" id="name" name="name" required />
  </div>
  <button type="submit" class="btn btn-primary">Add Bus</button>
</form>